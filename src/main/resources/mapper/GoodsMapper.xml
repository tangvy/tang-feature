<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tangv.feature.dao.GoodsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tangv.feature.model.entity.Goods">
        <id column="id" property="id" />
        <result column="goods_code" property="goodsCode" jdbcType="VARCHAR" />
        <result column="goods_name" property="goodsName" jdbcType="VARCHAR" />
        <result column="online" property="online" jdbcType="TINYINT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
        <result column="stacking_time" property="stackingTime" jdbcType="TIMESTAMP" />
        <result column="is_delete" property="isDelete" jdbcType="TINYINT" />
    </resultMap>

    <select id="selectByIds" parameterType="java.util.Collection" resultMap="BaseResultMap">
        SELECT * from
        goods where is_delete = 0
        and id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
           #{id}
        </foreach>
    </select>
    
    <update id="switchOnline">
        update goods set online = #{online}, modify_time = #{modifyTime}
        where is_delete = 0
        and id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </update>

</mapper>
